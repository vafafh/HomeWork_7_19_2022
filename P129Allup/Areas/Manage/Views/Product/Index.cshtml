@model List<Product>


@{
    ViewData["Title"] = "Index";
    int no = 0;
}



<div class="row mb-3 d-flex justify-content-between">
    <div class="col-lg-2">
        <h1>Products</h1>
    </div>
    <div class="col-lg-1">
        <a class="btn btn-primary" asp-controller="product" asp-action="create" asp-area="manage">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Discount Price</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                    no++;
                <tr>
                    <td>@no</td>
                    <th class="col-lg-1">
                        <img class="img-fluid" src="~/assets/images/product/@product.MainImage" alt="Alternate Text" />
                    </th>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("F2")</td>
                    <td>@product.DiscoutnPrice.ToString("F2")</td>
                    <th>
                        <a class="btn btn-primary" asp-area="manage" asp-controller="product" asp-action="Detail" asp-route-id="@product.Id">Detail</a>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="product" asp-action="Update" asp-route-id="@product.Id">Update</a>
                        <a class="btn btn-danger" asp-area="manage" asp-controller="product" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </th>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>