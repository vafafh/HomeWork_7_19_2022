@model Product
<h1>Create</h1>

<div class=" row justify-content-center">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span class="text text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price">
                <span class="text text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscoutnPrice"></label>
                <input asp-for="DiscoutnPrice" class="form-control" placeholder="DiscoutnPrice">
                <span class="text text-danger" asp-validation-for="DiscoutnPrice"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExTax"></label>
                <input asp-for="ExTax" class="form-control" placeholder="ExTax">
                <span class="text text-danger" asp-validation-for="ExTax"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span class="text text-danger" asp-validation-for="Description"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Count"></label>
                <input asp-for="Count" class="form-control" placeholder="Count">
                <span class="text text-danger" asp-validation-for="Count"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="MainFile"></label>
                <input asp-for="MainFile" class="form-control" placeholder="MainFile">
                <span class="text text-danger" asp-validation-for="MainFile"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoveFile"></label>
                <input asp-for="HoveFile" class="form-control" placeholder="HoveFile">
                <span class="text text-danger" asp-validation-for="HoveFile"></span>
            </div>
            <div class="form-group">
                <label asp-for="Files"></label>
                <input asp-for="Files" class="form-control" placeholder="Files">
                <span class="text text-danger" asp-validation-for="Files"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" class="form-control" asp-items="new SelectList(ViewBag.Brands, nameof(Brand.Id),nameof(Brand.Name))">
                </select>
                <span class="text text-danger" asp-validation-for="BrandId"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="new SelectList(ViewBag.Categories, nameof(Category.Id),nameof(Category.Name))">
                </select>
                <span class="text text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagIds"></label>
                <select asp-for="TagIds" class="form-control" asp-items="new SelectList(ViewBag.Tags, nameof(Tag.Id),nameof(Tag.Name))">
                </select>
                <span class="text text-danger" asp-validation-for="TagIds"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsBestSeller" class="form-check-input">
                <label class="form-check-label" asp-for="IsBestSeller"></label>
                <span class="text text-danger" asp-validation-for="IsBestSeller"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsFeature" class="form-check-input">
                <label class="form-check-label" asp-for="IsFeature"></label>
                <span class="text text-danger" asp-validation-for="IsFeature"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsNewArrivel" class="form-check-input">
                <label class="form-check-label" asp-for="IsNewArrivel"></label>
                <span class="text text-danger" asp-validation-for="IsNewArrivel"></span>
            </div>
            <div class="row justify-content-center">
                <div class="inputsContainer row col-lg-12 ">
                    <div class="form-group col-lg-4">
                        <label >Color</label>
                        <select name="ColorIds" class="form-control" asp-items="new SelectList(ViewBag.Colors, nameof(Color.Id),nameof(Color.Name))">
                        </select>
                    </div>
                    <div class="form-group  col-lg-4">
                        <label >Size</label>
                        <select name="SizeIds" class="form-control" asp-items="new SelectList(ViewBag.Sizes, nameof(Size.Id),nameof(Size.Name))">
                        </select>
                    </div>
                    <div class="form-group col-lg-4">
                        <label >Count</label>
                        <input name="Counts" class="form-control" placeholder="Count">
                    </div>
                </div>
                <div class="col-lg-1">
                    <a asp-area="manage" asp-controller="product" asp-action="GetProductColorSizePartial" class="btn btn-primary addinputs">Add</a>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">
}



















