@model Category
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class=" row justify-content-center">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
            <div class="form-check">
                <input asp-for="IsMain" class="form-check-input isMaininput">
                <label asp-for="IsMain" class="form-check-label"></label>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3 form-group imagecontainer">
                <label asp-for="File" class="form-label"></label>
                <input asp-for="File" accept="image/jpeg" class="form-control">
                <span class="text-danger" asp-validation-for="File"></span>
            </div>
            <div class="form-group parentcontainer">
                <label asp-for="ParentId"></label>
                <select asp-for="ParentId" class="form-control" asp-items="new SelectList(ViewBag.MainCategories,nameof(Category.Id),nameof(Category.Name))">
                    <option value="">Select Main Category</option>
                </select>
                <span class="text-danger" asp-validation-for="ParentId"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

